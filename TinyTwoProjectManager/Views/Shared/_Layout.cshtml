<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,400italic,300italic,600,700' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="~/Content/Styles/Vendor/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Styles/Vendor/jquery-modal.min.css" media="screen" />
    <link rel="stylesheet" href="~/Content/Styles/accordion.css?v=1" />
    <link rel="stylesheet" href="~/Content/Styles/global.css" />
    <link rel="stylesheet" href="~/Content/Styles/structure.css?v=2" />
    <link rel="stylesheet" href="~/Content/Styles/modules.css?v=1" />
    <link rel="stylesheet" href="~/Content/Styles/project-list.css" />
    <link rel="stylesheet" href="~/Content/Styles/modal.css?v=1" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 no-horizontal-padding" id="main-header">
                <a href="/" id="logo" title="Home">
                    <img src="@Url.Content("~/Content/Images/tt-logo.png")" alt="Logo" height="40" />
                    <span id="logo-text">PROJECT MANAGER</span>
                </a>

                <div id="main-header-right">
                    <a href="/" title="Settings"><img src="@Url.Content("~/Content/Images/Vendor/interface-icon-compilation/settings-2.png")" alt="Settings" height="25" /></a>
                    <a href="/" class="js-slideout-toggle" title="Menu"><img src="@Url.Content("~/Content/Images/Vendor/basic-solid-ui/menu.png")" alt="Menu" height="25" /></a>
                </div>
            </div>
        </div>

        @RenderBody()
    </div>

    <script src="@Url.Content("~/Scripts/Vendor/jquery-3.1.0.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Vendor/jquery-ui-1.12.0.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Vendor/jquery-modal.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Vendor/jquery-validate-1.15.0.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Vendor/jquery-validate-unobtrusive-5.2.min.js")"></script>
    <script src="@Url.Content("~/Scripts/accordion.js")"></script>

    <!--<script src="@*@Url.Content("~/Scripts/Vendor/react-15.0.1.js")*@"></script>
    <script src="@*@Url.Content("~/Scripts/Vendor/react-dom-15.0.1.js")*@"></script>
    <script src="~/js/vendor.js"></script>
    <script src="~/js/main.js"></script>

    <script type="text/javascript">
        self._babelPolyfill = false;    // HACK: see http://stackoverflow.com/a/36672020/1434764
    </script>-->

    @RenderSection("scripts", false)
</body>
</html>